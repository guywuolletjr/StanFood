<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding">

            <TextView
                android:id="@+id/infoEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_padding"
                android:paddingTop="@dimen/margin_padding"
                android:paddingRight="@dimen/margin_padding"
                android:paddingBottom="@dimen/margin_padding"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_padding"
                android:paddingRight="@dimen/margin_padding"
                android:paddingBottom="@dimen/margin_padding"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/infoFoodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_padding"
                android:paddingRight="@dimen/margin_padding"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/location_icon_foreground"/>
                <TextView
                    android:id="@+id/infoLocationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_padding"
                    android:paddingTop="@dimen/margin_padding"
                    android:paddingLeft="@dimen/margin_padding"
                    android:paddingRight="@dimen/margin_padding"
                    android:text=""
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_height"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/clock_icon_foreground"/>
                <TextView
                    android:id="@+id/infoEventTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_padding"
                    android:paddingTop="@dimen/margin_padding"
                    android:paddingLeft="@dimen/margin_padding"
                    android:paddingRight="@dimen/margin_padding"
                    android:text=""
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>

</RelativeLayout>