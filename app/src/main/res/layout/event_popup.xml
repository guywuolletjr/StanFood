<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_box">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/infoEventDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_padding"
                    android:paddingTop="@dimen/margin_padding"
                    android:paddingLeft="@dimen/margin_padding"
                    android:paddingRight="@dimen/margin_padding"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/infoLocationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_padding"
                    android:paddingTop="@dimen/margin_padding"
                    android:paddingLeft="@dimen/margin_padding"
                    android:paddingRight="@dimen/margin_padding"
                    android:text="@string/event_location_header"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/infoEventTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_padding"
                    android:paddingTop="@dimen/margin_padding"
                    android:paddingLeft="@dimen/margin_padding"
                    android:paddingRight="@dimen/margin_padding"
                    android:text="@string/event_time_header"
                    android:textSize="@dimen/text_size" />
        </LinearLayout>


</RelativeLayout>